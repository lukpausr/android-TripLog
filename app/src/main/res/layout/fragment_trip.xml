<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Enable Tracking"
        android:paddingRight="20dp"
        android:textColor="@color/dhbw_red"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/swToggleButton"
        app:layout_constraintStart_toStartOf="@id/swToggleButton"/>

    <Switch
        android:id="@+id/swToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvToggleButton"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTrips"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/dhbw_grey"
        app:layout_constraintBottom_toTopOf="@id/tvTripExplain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/swToggleButton"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvTripExplain"
        android:text="Click on one of your recent trips\nto upload it to be used in a\nDHBW Studienarbeit"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="@color/dhbw_red"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvTrips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>